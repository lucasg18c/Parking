<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pages.prices.PricesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/txtAuto"
                app:layout_constraintTop_toTopOf="@id/txtAuto"
                app:layout_constraintBottom_toBottomOf="@id/txtAuto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/hora"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/txtAuto"
                app:layout_constraintTop_toTopOf="@id/txtAuto"
                app:layout_constraintBottom_toBottomOf="@id/txtAuto"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camioneta"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtCamioneta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textSize="40sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/txtCamioneta"
                app:layout_constraintTop_toTopOf="@id/txtCamioneta"
                app:layout_constraintBottom_toBottomOf="@id/txtCamioneta"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/hora"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/txtCamioneta"
                app:layout_constraintTop_toTopOf="@id/txtCamioneta"
                app:layout_constraintBottom_toBottomOf="@id/txtCamioneta"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moto / bici"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtMoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textSize="40sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/txtMoto"
                app:layout_constraintTop_toTopOf="@id/txtMoto"
                app:layout_constraintBottom_toBottomOf="@id/txtMoto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/hora"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/txtMoto"
                app:layout_constraintTop_toTopOf="@id/txtMoto"
                app:layout_constraintBottom_toBottomOf="@id/txtMoto"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>